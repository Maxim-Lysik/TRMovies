<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingBottom="50dp"
        tools:context=".ui.networkrequestactivity.fragments.searching.FoundFragment.FoundFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/mintsansregular"
            android:text="Â© All the data present in this application was collected hith the help of TMDB API"
            android:textColor="#B1BCBE"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:layout_constraintVertical_bias="0.62" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView12"
            app:srcCompat="@drawable/also_big_pic"
            tools:srcCompat="@drawable/also_big_pic" />

        <ImageView
            android:id="@+id/gradient_image2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/my_gradient_drawable"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/my_gradient_drawable"
            tools:layout_editor_absoluteX="33dp" />

        <TextView
            android:id="@+id/textik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:text="@string/hello_blank_fragment"
            android:textColor="#FFD829"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actors_imageview" />

        <ImageView
            android:id="@+id/actors_imageview"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="#B1BCBE"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/testing"
            app:layout_constraintTop_toBottomOf="@+id/release_date" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icons8_calendar_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textik"
            app:srcCompat="@drawable/icons8_calendar_100"
            tools:srcCompat="@drawable/icons8_calendar_100" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icons8_good_quality_100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/release_blank"
            app:srcCompat="@drawable/icons8_good_quality_100"
            tools:srcCompat="@drawable/icons8_good_quality_100" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansregular"
            android:lineSpacingExtra="4dp"
            android:text="TextView"
            android:textColor="#B1BCBE"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testing" />

        <TextView
            android:id="@+id/testing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="Current rate:"
            android:textColor="#B1BCBE"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toBottomOf="@+id/release_blank" />

        <TextView
            android:id="@+id/release_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"

            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="Release date:"
            android:textColor="#B1BCBE"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textik" />

        <TextView
            android:id="@+id/release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="TextView"
            android:textColor="#B1BCBE"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/release_blank"
            app:layout_constraintTop_toBottomOf="@+id/textik" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:scaleType="fitXY"
            app:backgroundTint="#FFD829"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_left_arrow_100" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/description"
            app:srcCompat="@drawable/line_one" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>