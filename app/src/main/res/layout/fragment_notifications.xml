<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.networkrequestactivity.fragments.saved_items.SavedItemsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/saved_items_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="55dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/no_items_imageview"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginBottom="55dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nothing3"
        tools:src="@drawable/nothing3"
        tools:srcCompat="@drawable/nothing3" />

    <TextView
        android:id="@+id/nothing_found_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/mintsansregular"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="Nothing found"
        android:textColor="#B1BCBE"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_items_imageview" />

</androidx.constraintlayout.widget.ConstraintLayout>