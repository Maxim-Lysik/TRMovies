<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.networkrequestactivity.fragments.affiche.personfragment.PersonFragment">

        <!-- TODO: Update blank fragment layout -->
        <ImageView
            android:id="@+id/gradient_image"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="470dp"
            android:background="@drawable/my_gradient_drawable"
            android:translationZ="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/my_gradient_drawable"
            tools:layout_editor_absoluteX="33dp" />

        <ImageView
            android:id="@+id/actors_imageview"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />


        <TextView
            android:id="@+id/actors_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="Aboba"
            android:textColor="#B1BCBE"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/actors_imageview" />

        <TextView
            android:id="@+id/actors_popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:fontFamily="@font/mintsansbold"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:text="Most viewed:"
            android:textColor="#B1BCBE"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actors_name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/known_for_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actors_popularity"
            app:layout_constraintVertical_bias="0.0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/back_button_person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:minWidth="10dp"
            android:minHeight="10dp"
            android:scaleType="fitXY"
            app:backgroundTint="#FFD829"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icons8_left_arrow_100" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="55dp"
            android:fontFamily="@font/mintsansregular"
            android:text="Â© All the data present in this application was collected hith the help of TMDB API"
            android:textColor="#B1BCBE"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/known_for_recycler" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/known_for_recycler"
            app:srcCompat="@drawable/also_big_pic"
            tools:srcCompat="@drawable/also_big_pic" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gradient_image"
            app:srcCompat="@drawable/icons8_star_filled_100"
            tools:srcCompat="@drawable/icons8_star_filled_100" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>