<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/black"

    >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="1.16"
        app:srcCompat="@drawable/second_screen6"
        tools:srcCompat="@drawable/second_screen6" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="260dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_weight="0"
        app:srcCompat="@drawable/line3"
        tools:src="@tools:sample/avatars"
        tools:srcCompat="@drawable/line3" />

    <TextView
        android:id="@+id/exploreTitle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mintsansbold"
        android:text="Find the best"
        android:textAlignment="center"
        android:textColor="#B1BCBE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/mintsansregular"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="Use our search to get the film you need. \n With our base that is not a problem.\n Just keep searching! "
        android:textColor="#B1BCBE" />


    <Button
        android:id="@+id/second_next_button"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#4BA2D3"
        android:fontFamily="@font/mintsansbold"
        android:text="Next"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

</LinearLayout>